<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="184dp"
            android:layout_height="169dp"
            android:id="@+id/itemPic"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.012"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.03"/>
    <TextView
            android:text="TextView"
            android:layout_width="199dp"
            android:layout_height="35dp"
            android:id="@+id/itemName"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textColor="#F84242"
            app:layout_constraintTop_toTopOf="@+id/itemPic"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/itemPic" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.257"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:id="@+id/itemPrice"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/itemName" app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintEnd_toEndOf="@+id/itemName"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.181"/>
</androidx.constraintlayout.widget.ConstraintLayout>