<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignIn"
        android:background="@drawable/loginpage">
    <Button
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:text="Login with Facebook"
            android:layout_width="241dp"
            android:layout_height="wrap_content" android:id="@+id/facebook_login"
            app:layout_constraintEnd_toEndOf="@+id/gmail_login"
            app:layout_constraintStart_toStartOf="@+id/gmail_login"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.552"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.015" app:layout_constraintTop_toBottomOf="@+id/gmail_login"
    />
    <Button
            android:background="@drawable/gmailbutton"
            android:textColor="#ffffff"
            android:text="Login with Gmail"
            android:layout_width="241dp"
            android:layout_height="wrap_content" android:id="@+id/gmail_login"
            app:layout_constraintEnd_toEndOf="@+id/register_button"
            app:layout_constraintStart_toStartOf="@+id/register_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.214"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/register_button"
    />
    <Button
            android:textColor="#ffffff"
            android:background="@drawable/signin"
            android:text="Sign in"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button" app:layout_constraintEnd_toEndOf="@+id/email_text"
            app:layout_constraintStart_toStartOf="@+id/email_text"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.047" app:layout_constraintTop_toBottomOf="@+id/password_text"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:hint="Email Address"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_text"
            app:layout_constraintEnd_toEndOf="@+id/email_text"
            app:layout_constraintStart_toStartOf="@+id/email_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_text" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.048"
            android:hint="Password"/>
</androidx.constraintlayout.widget.ConstraintLayout>