<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tuitions">

    <Button
            android:text="offer a tuition deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/offer_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="take a tuition deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/take_button"
            app:layout_constraintTop_toBottomOf="@+id/offer_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.036"/>


</android.support.constraint.ConstraintLayout>