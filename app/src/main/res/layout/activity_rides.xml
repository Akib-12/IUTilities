<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Rides">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
              app:layout_constraintVertical_bias="0.544" android:id="@+id/editText"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="@+id/button7" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
              app:layout_constraintVertical_bias="0.738" android:id="@+id/editText2"/>
    <Button
            android:text="offer a ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/offer_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintVertical_bias="0.327"/>
    <Button
            android:text="hitch a ride"
            android:layout_width="wrap_content"
            android:layout_height="35dp" android:id="@+id/hitch_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.836"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.332"/>
    <Button
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.625"/>
    <Button
            android:text="to"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/button6" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.537"
            app:layout_constraintVertical_bias="0.791"/>
    <Button
            android:text="next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button7" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.537"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Date"
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.131" android:textSize="18sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.567"/>
</android.support.constraint.ConstraintLayout>